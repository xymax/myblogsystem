         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--直接进入的页面-->
    <welcome-file-list>
        <welcome-file>/jsp/articleList.jsp</welcome-file>
    </welcome-file-list>



<servlet>
